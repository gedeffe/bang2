<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" prefHeight="504.0" prefWidth="686.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.supinfo.recipe.recipe.RecipeListController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <HBox alignment="CENTER" spacing="20.0">
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Name"/>
            <ChoiceBox fx:id="choiceBox1" prefWidth="150.0"/>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Duration"/>
            <ChoiceBox fx:id="choiceBox2" prefWidth="150.0"/>
        </VBox>
        <VBox alignment="CENTER_LEFT" spacing="5.0">
            <Label text="Difficulty"/>
            <ChoiceBox fx:id="choiceBox3" prefWidth="150.0"/>
        </VBox>
        <Button fx:id="filterButton" mnemonicParsing="false" text="Filter">
            <HBox.margin>
                <Insets top="20.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <FlowPane prefHeight="200.0" prefWidth="611.0">
        <children>
            <VBox prefHeight="200.0" prefWidth="648.0">
                <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tarte au Pomme">
                        <VBox.margin>
                            <Insets left="20.0" top="10.0"/>
                        </VBox.margin>
                        <font>
                            <Font size="24.0"/>
                        </font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0"
                          text="Description Description Description Description Description">
                        <font>
                            <Font size="18.0"/>
                        </font>
                        <VBox.margin>
                            <Insets left="20.0" top="10.0"/>
                        </VBox.margin>
                    </Text>
                </children>
            </VBox>
        </children>
    </FlowPane>

    <!--    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#306580" height="135.0" stroke="BLACK" strokeType="INSIDE" width="600.0" />-->
</VBox>
